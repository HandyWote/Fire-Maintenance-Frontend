# 应用基础配置
VITE_APP_TITLE=消防维护管理系统
VITE_APP_VERSION=1.0.0

# API配置
VITE_API_BASE_URL=/api
VITE_API_TIMEOUT=10000

# 认证配置
VITE_AUTH_ENABLED=true
VITE_AUTH_MODE=real  # hybrid: 混合模式(优先真实API，失败时模拟), real: 仅真实API, mock: 仅模拟API
VITE_AUTH_COOKIE_ENABLED=true
VITE_AUTH_COOKIE_SECURE=true
VITE_AUTH_COOKIE_SAME_SITE=strict

# 测试账号配置
VITE_TEST_ACCOUNTS_ENABLED=false
VITE_TEST_ADMIN_USERNAME=admin
VITE_TEST_ADMIN_PASSWORD=123456
VITE_TEST_USER_USERNAME=user
VITE_TEST_USER_PASSWORD=123456

# 上传配置
VITE_UPLOAD_MAX_SIZE=10485760
VITE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 其他配置
VITE_APP_ENV=production
VITE_APP_DEBUG=false

# 生产服务器配置
VITE_PROD_SERVER_HOST=localhost
VITE_PROD_SERVER_HTTPS=true

# 性能优化配置
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_BROTLI=true
VITE_ENABLE_GZIP=true

# 缓存配置
VITE_CACHE_MAX_AGE=31536000
VITE_SERVICE_WORKER=true
